if command -v python3 &> /dev/null && python3 --version 2>&1 | grep -q "^Python 3\."; then
  PYTHON=python3
elif command -v python &> /dev/null && python --version 2>&1 | grep -q "^Python 3\."; then
  PYTHON=python
else
  echo "Can't find python 3.x on your system. Install it as python3 or python."
  exit 1
fi

echo "python is $PYTHON"
if [ ! -d "./python-env" ]; then
  $PYTHON -m venv ./python-env || exit 1
fi

source ./python-env/bin/activate

echo "Python Version:"
python --version
